{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "NodeNext",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "outDir": "./lib"
  },
  "include": ["src/**/*.ts"]
}
